{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}
