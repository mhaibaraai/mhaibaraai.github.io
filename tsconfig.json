{
  "extends": "@movk-repo/typescript-config/vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~c/*": [
        "src/components/*"
      ],
      "@movk-repo/*": [
        "packages/*"
      ]
    },
    "types": [
      "node",
      "vite/client",
      "element-plus/global"
    ]
  },
  "include": [
    "typings/**/*",
    "docs/**/*",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue",
    "packages/**/*"
  ],
  "exclude": [
    "docs/snippets"
  ]
}
