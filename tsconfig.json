{
  "extends": "@movk-repo/typescript-config/vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@movk-repo/*": ["packages/*"],
      "@movk-repo/shared": ["packages/shared/src"]
    },
    "types": [
      "node",
      "vite/client",
      "element-plus/global"
    ]
  },
  "include": [
    "typings/**/*",
    "docs/**/*",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue",
    "packages/**/*"
  ],
  "exclude": [
    "docs/snippets"
  ]
}
