{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "types": [
    "chrome",
    "vite/client"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "docs/snippets",
    "scripts"
  ]
}
