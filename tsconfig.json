{
  "extends": "@movk-repo/typescript-config/vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@movk-repo/*": [
        "./packages/*"
      ],
      "@movk-repo/components/*": [
        "./packages/components/*"
      ],
      "@movk-repo/shared/*": [
        "./packages/shared/*"
      ],
      "@movk-repo/theme/*": [
        "./packages/theme/*"
      ]
    }
  },
  "include": [
    "typings/*.d.ts",
    "packages/**/*",
    "packages/**/*.ts",
    "packages/**/*.vue",
    "packages/**/*.tsx",
    "docs/**/*",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue"
  ]
}
